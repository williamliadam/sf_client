{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./public", "node_modules"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": ["./public", "node_modules", "dist", "*.json"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["./public", "node_modules", "dist", "*.json"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
